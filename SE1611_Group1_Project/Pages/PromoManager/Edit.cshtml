@page
@model SE1611_Group1_Project.PromoManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-3">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <h1>Edit Promo</h1>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Promo.PromoCode" />
                <div class="mb-3">
                    <label asp-for="Promo.PromoValue" class="form-label"></label>
                    <input asp-for="Promo.PromoValue" class="form-control" />
                    <span asp-validation-for="Promo.PromoValue" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Promo.PromoDescribe" class="form-label"></label>
                    <input asp-for="Promo.PromoDescribe" class="form-control" />
                    <span asp-validation-for="Promo.PromoDescribe" class="form-text text-danger"></span>
                </div>
                <div class="my-1">
                    <label class="mb-2">Status</label>
                    <div class="form-check">
                        <input asp-for="Promo.PromoStatus" class="form-check-input" type="radio" name="Promo.PromoStatus" id="promo-status-equal-to-0" value="0" checked>
                        <label class="form-check-label" for="food-status-equal-to-0">
                            Deactived
                        </label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Promo.PromoStatus" class="form-check-input" type="radio" name="Promo.PromoStatus" id="promo-status-not-equal-to-1" value="1">
                        <label class="form-check-label" for="food-status-not-equal-to-0">
                            Actived
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
